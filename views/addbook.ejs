<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Online Book Store App</title>
    <style>
      body, *{
            cursor: url('/images/icons8-cursor-30.png'), auto;
        }

        body:active, *:active{
            cursor: url('/images/icons8-cursor-30.png'), auto;
        }

        body:hover, *:hover{
            cursor: url('/images/icons8-cursor-30.png'), auto;
        }

        input, textarea {
        cursor: url('/images/cursor-default.gif'), auto;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    

    <div class="container">
        <div class="row">
          <div class="col-md-1">
            <!-- Empty Left column -->
          </div> 
          <div class="col-md-10"> <!-- Middle column -->
            <div class="p-3 border bg-light">
              <div class="shadow p-3 mb-5 bg-body rounded">
                <div class="container mt-3">
                    <h2>Add Book</h2>
                    <form action="/books" method="POST" enctype="multipart/form-data">
                        <div class="mb-3 mt-3">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter Title" name="title" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="author">Author:</label>
                            <input type="text" class="form-control" id="author" placeholder="Enter Authors Name" name="author" required>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="pages">Page Count:</label>
                            <input type="number" class="form-control" id="pages" placeholder="Enter page number" name="pages" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            <textarea class="form-control" id="description" rows="3" name="description" required></textarea>
                        </div>
                        <div class="mb-3">
                          <label for="readLink" class="form-label">E-Book PDF:</label>
                          <input type="file" class="form-control" id="readLink" accept="application/pdf" name="readLink" required>
                      </div>
                        <div class="mb-3">
                            <label for="cover" class="form-label">Cover Image:</label>
                            <input class="form-control" type="file" id="cover" name="cover" accept=".jpg,.jpeg,.png,.gif,.bmp,.webp" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            </div>
          </div>
          <div class="col-md-1">
            <!-- Empty Right column -->
          </div>
        </div>
      </div>
</body>
</html>